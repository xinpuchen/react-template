{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "checkJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "components": [
        "components"
      ],
      "constants": [
        "constants"
      ],
      "containers": [
        "containers"
      ],
      "locales": [
        "locales"
      ],
      "models": [
        "models"
      ],
      "routes": [
        "routes"
      ],
      "scss": [
        "scss"
      ],
      "stores": [
        "stores"
      ],
      "utils": [
        "utils"
      ],
      "views": [
        "views"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "static",
    "build",
    "dlls"
  ]
}
